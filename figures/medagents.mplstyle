font.size: 8.5
font.family: sans-serif
font.sans-serif: Arial, Helvetica, DejaVu Sans, Liberation Sans

figure.dpi: 300
figure.facecolor: white

axes.linewidth: 0.8
axes.spines.top: False
axes.spines.right: False
axes.facecolor: white
axes.grid: False
grid.alpha: 0.15
grid.linewidth: 0.5

xtick.major.size: 3.5
ytick.major.size: 3.5
xtick.major.width: 0.8
ytick.major.width: 0.8
xtick.labelsize: 8
ytick.labelsize: 8
xtick.direction: out
ytick.direction: out

legend.frameon: False
legend.fontsize: 7.5

lines.linewidth: 1.8
lines.markersize: 5

patch.linewidth: 1.2
savefig.format: pdf
savefig.bbox: tight